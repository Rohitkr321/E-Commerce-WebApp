<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<div class="container mt-3 col-md-6">
    <h3 class="text-center">Request For Admin</h3>
    <p class="mb-3 text-center"> <%=message%></p>
    <form action="/admin/requestadmin" method="post">
        <input type="email" name="username" id="email" placeholder="Enter Your Registered Email*" value="<%= username %>" class="form-control" required />
        <div id="emailHelp" class="form-text mb-3">We Will Send You a Confirmation Email After Checking All The Requirements</div>
        <div class="text-center">
            <input type="submit" value="Send Email" class="btn btn-primary">
        </div>
    </form>
</div>   