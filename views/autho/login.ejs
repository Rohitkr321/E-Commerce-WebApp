  <link rel="stylesheet" href="/static/css/signup.css" type="text/css">
  <title>Login</title>
</head>

<body >
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">AajShopping</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <ul class="nav justify-content-end">
        <li class="nav-item">
          <i class="" aria-hidden="true"></i>
          <a class="navbar-brand" href="/">Home</a>
        <li class="nav-item">
          <i class="" aria-hidden="true"></i>
          <a class="navbar-brand" href="#">About</a>
        </li>
        </li>
        <li class="nav-item">
          <i class="fa fa-sign-in red fa-lg" aria-hidden="true"></i>
          <a class="navbar-brand" href="/signup">Register</a>
        </li>

      </ul>
    </div>
  </nav>
  <div class="col-md-12">
    <div class="login_page">
      <h1 id="heading" style="color:orange; text-align:center">Login Here</h1>
      <form class="login_form" id="loginDiv" action="/login" method="POST">
        <div class="form">
          <p class="text-white">
            <%=message%>
          </p>
          <div class="login_form" id="loginDiv">
            <input type="email" placeholder="Username" id="username" name="username" required>
            <input type="password" placeholder="Password" id="password" name="password" required>
            <button type="submit" id="login">login</button>
            <p class="message" id="message"><a href="/forgetPassword">ForgetPassword</a></p>
          </div>
        </div>
      </form>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
